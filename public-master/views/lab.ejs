    <script>
      $(document).ready(function(){
      if(users){
        if(users.local.admin==1){
           $("#edit").css("display","block");
        }
      }
    
      $.get('/data',(result,status)=>{
        console.log(result);
        for(i=0;i<result.length;i++){
          console.log(result[i]);
          $('#card_row').append(`
          <div class="col-md-3">
                            <div class="card" style="width: 18rem;padding:5%; margin:3%">
                              <a href=/admin/editLabAdmin?id=`+result[i]._id+` id="edit"><b>EDIT</b></a>
                                <img src="..." class="card-img-top" alt="...">
                                <div class="card">
                                  <h5 class="card-title"><b>`+result[i].heading+`</b></h5>
                                  <p class="card-text" style:>`+result[i].description
                                    +`</p>
                                    <a href="`+result[i].link+`" class="card-body w3-btn w3-round">click</a>
                                </div>
                              </div>
                        </div>
          `)
        }
      })
      $('.course').click(function(e){
        course=$(this).val();
        e.preventDefault();
        $.ajax({
          url:'/filter',
          method:'POST',
          data:{course:course},
          dataType:"JSON",
          success:function(result){
            $('#card_row').empty();
            for(i=0;i<result.length;i++){
          console.log(result[i]);
          $('#card_row').append(`
          <div class="col-md-4">
                            <div class="card text-white bg-dark mb-3" style="width: 18rem;padding:5%; margin:3%">
                              <a href=/admin/editLabAdmin?id=`+result[i]._id+` id="edit"><b>EDIT</b></a>
                                <img src="..." class="card-img-top" alt="...">
                                <div class="card">
                                  <h5 class="card-title"><b>`+result[i].heading+`<b></h5>
                                  <p class="card-text">`+result[i].description
                                    +`</p>
                                    <a href="`+result[i].link+`" class="card-body w3-btn w3-round" >click</a>
                                </div>
                              </div>
                        </div>
          `)
        }
          }
        })
      })
    });
    $.ajax({
          url:'/edit',
          method:'POST',
          data:{id:$("edit")},
          dataType:"JSON",
          success:function(result){
          }
        })
    </script>   
